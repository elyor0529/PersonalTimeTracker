<Page x:Class="TimeTracker.Home"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:oxy="http://oxyplot.org/wpf"
      xmlns:local="clr-namespace:TimeTracker"
      mc:Ignorable="d"
      Title="Home" Height="445.099" Width="604.178">

    <Grid>
        <TabControl TabStripPlacement="Left">
            <TabItem Header="General">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="50"/>
                        <RowDefinition />
                    </Grid.RowDefinitions>
                    <StackPanel HorizontalAlignment="Center" Orientation="Horizontal" Grid.Row="0" Grid.Column="0">
                        <Border BorderThickness="5" BorderBrush="Transparent" Grid.Row="0" Grid.Column="0">
                            <Button Name="StartTrackingTaskBtn" Grid.Column="0" Grid.Row="0" Height="30">
                                Start tracking a task
                            </Button>
                        </Border>
                        <Border BorderThickness="5" BorderBrush="Transparent" Grid.Row="0" Grid.Column="0">
                            <Button Name="AddPreviousTaskBtn" Grid.Column="1" Grid.Row="0" Height="30" Click="AddPreviousTaskBtn_Click">
                                Add a previous task
                            </Button>
                        </Border>
                    </StackPanel>

                       <!-- <StackPanel Orientation="Horizontal" Name="TopRecentTaskContainer" Grid.Row="1" Grid.Column="0">
                        -->
                    <Grid Name="TopRecentTaskContainer" 
                        Grid.ColumnSpan="2" Grid.Column="0" Grid.Row="1">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="300"/>
                            </Grid.RowDefinitions>
                            <ListView HorizontalAlignment="Left" 
                            
                            Grid.Column="0"
                            Grid.Row="0"
                            Name="Top5RecentTasksListView"
                            Initialized="Top5RecentTasksListView_Initialized"/>

                        <oxy:PlotView 
                        Grid.Column="1"  
                        Grid.Row="0" 
                        x:Name="Plot1" 
                        Model="{Binding PlotModel}" Margin="10">
                        </oxy:PlotView>

                        <!--</StackPanel>-->
                    </Grid>
                </Grid>
            </TabItem>
        </TabControl>

    </Grid>
</Page>
