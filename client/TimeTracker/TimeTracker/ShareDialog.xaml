<Window x:Class="TimeTracker.ShareDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TimeTracker"
        mc:Ignorable="d"
        Title="ShareDialog" Height="150" Width="300">
    <Grid VerticalAlignment="Center">
        <StackPanel HorizontalAlignment="Center" Orientation="Horizontal">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="120"/>
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition />
                    <RowDefinition Height="20"/>
                    <RowDefinition />
                    <RowDefinition />
                </Grid.RowDefinitions>
                <TextBlock Grid.Row="0" Grid.Column="0">Share task with email: </TextBlock>
                <TextBox Name="Email" Width="100" Grid.Row="0" Grid.Column="1"></TextBox>
                <Button Name="shareBtn" Click="shareBtn_Click" Width="100" Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="2">share</Button>
                <TextBlock Name="resultTextBlock" Grid.Row="3" Grid.ColumnSpan="2"></TextBlock>
            </Grid>
        </StackPanel>
    </Grid>
</Window>
